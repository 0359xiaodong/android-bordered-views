<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="Borders">
        <!-- Specifies which sides to add borders to -->
       <attr name="borders">
            <flag name="top" value="0x01"/>
            <flag name="bottom" value="0x02"/>
            <flag name="left" value="0x04"/>
            <flag name="right" value="0x08"/>
            <flag name="all" value="0x0F"/>
       </attr>
       <!-- How wide the border should be -->
       <attr name="borderWidth" format="dimension"/>
       <!-- Color of the border -->
       <attr name="borderColor" format="color"/>
       <!-- The radius of all corners -->
       <attr name="borderRadius" format="dimension"/>
       <!-- The radius of the top left corner -->
       <attr name="radiusTopLeft" format="dimension"/>
       <!-- The radius of the top right corner -->
       <attr name="radiusTopRight" format="dimension"/>
       <!-- The radius of the bottom left corner -->
       <attr name="radiusBottomLeft" format="dimension"/>
       <!-- The radius of the bottom right corner -->
       <attr name="radiusBottomRight" format="dimension"/>
   </declare-styleable>
</resources>